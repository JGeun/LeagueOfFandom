<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="#ffffff" />
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/ic_check_default" />
        </layer-list>
    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="#ffffff" />
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/ic_check_selected" />
        </layer-list>
    </item>
</selector>